generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patient {
  id              String            @id @default(cuid())
  patient_name    String
  age             String
  sex             String
  NoseReport      NoseReport[]
  ThroatEarReport ThroatEarReport[]
}

model NoseReport {
  id                            String   @id @default(cuid())
  reportName                    String
  patientID                     String
  patient                       Patient  @relation(fields: [patientID], references: [id])
  createdAt                     DateTime @default(now())
  Right_Naasal_Cavity           String @default("")
  Inferior_Turbinate_and_Meatus String @default("")
  Middle_Turbinate_and_Meatus   String @default("")
  Uncinate_Process              String @default("")
  Superior_Turbinate_and_Meatus String @default("")
  Sphenoethmoidal_Recess        String @default("")
  Left_Nasal_Cavity             String @default("")
  Bulla                         String @default("")
  Septum                        String @default("")
  Nasopharynx                   String @default("")
  Roof                          String @default("")
  Posterior_Wall                String @default("")
  Eustachian_Tube_Orifice       String @default("")
  Interpretation                String @default("")
  Impression                    String @default("")
}

model ThroatEarReport {
  id                        String   @id @default(cuid())
  reportName                String
  patientID                 String
  patient                   Patient  @relation(fields: [patientID], references: [id])
  createdAt                 DateTime @default(now())
  Oral_Cavity               String
  Hard_Palate               String
  Soft_Palate               String
  Uvula                     String
  Posterior_Of_Tongue       String
  Epiglottis                String
  Vallecula                 String
  Pharyngoepiglottic_Fold   String
  Aryepiglottic_Fold        String
  Arytnoids                 String
  Ventricular_Band          String
  Vocal_Cord                String
  Posterior_Pharyngeal_Wall String
  Sub_Glottis               String
  Other_Findings            String
  Impression_Throat         String
  EAR                       String
  EAC                       String
  Tympanic_Membrane         String
  Pars_Flaccida             String
  Pars_Tensa                String
  Impression_Ear            String
}
