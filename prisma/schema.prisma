generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patient {
  id           String   @id @default(cuid())
  patient_name String
  age          String
  sex          String
  Reports      Report[]
}

model Report {
  id                      String   @id @default(cuid())
  reportName              String
  patientID               String
  patient                 Patient  @relation(fields: [patientID], references: [id])
  createdAt               DateTime @default(now())
  rightNasalCavity        String
  inferiorTurbinateMeatus String
  middleTurbinateMeatus   String
  uncinateProcess         String
  superiorTurbinateMeatus String
  sphenoethmoidalRecess   String
  leftNasalCavity         String
  bulla                   String
  septum                  String
  nasopharynx             String
  roof                    String
  posteriorWall           String
  eustachianTubeOrifice   String
  interpretation          String
  impression              String
}
